<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="post"
            type="com.example.jjsampayo.mvvmsample1.repositories.models.Post"/>
    </data>

    <android.support.v7.widget.CardView
        android:id="@+id/item_posts_cardview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:transitionName="sharedElement"
        android:layout_margin="7dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_margin="7dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:textSize="15sp"
                android:textStyle="bold"
                android:text="@{post.title}"
                tools:text="sunt aut facere repellat provident occaecati excepturi optio reprehenderit"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:alpha=".3"
                android:background="@color/colorAccent"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:textSize="12sp"
                android:textStyle="italic"
                android:text="@{post.body}"
                tools:text="sunt aut facere repellat provident occaecati excepturi optio reprehenderit"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="end"
                android:orientation="horizontal">

                <android.support.v7.widget.AppCompatImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/ic_message"
                    tools:ignore="VectorDrawableCompat" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    tools:text="18"
                    android:text="99"
                    android:layout_marginRight="15dp"
                    android:layout_marginEnd="15dp"/>

            </LinearLayout>

        </LinearLayout>

    </android.support.v7.widget.CardView>
</layout>